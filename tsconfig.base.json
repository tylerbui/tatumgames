{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/src/*", "apps/web/app/*"],
      "@web/*": ["apps/web/src/*", "apps/web/app/*"],
      "@mobile/*": ["apps/mobile/src/*"],
      "@ui/*": ["packages/ui/src/*"]
    }
  }
}
